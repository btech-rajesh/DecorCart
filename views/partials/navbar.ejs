<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Decor_cart</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/products">Home</a>
        </li>
        <% if(currentUser && currentUser.role === 'seller') { %>
        <li class="nav-item">
          <a class="nav-link" href="/product/new">New</a>
        </li>
        <% } %>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="navbarDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Services
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="/about">About</a></li>
            <li><a class="dropdown-item" href="/schedule">Add Services</a></li>
            <li>
              <hr class="dropdown-divider" />
            </li>
            <li><a class="dropdown-item" href="/contact">Contact Us</a></li>
          </ul>
        </li>
      </ul>
      <div class="d-flex">
        <% if (!currentUser) { %>
       <a href="/login" class="nav-link mx-2 login-btn" style="color: #000; font-weight: bold;">Login</a>
<a href="/register" class="nav-link mx-2 signup-btn" style="color: #000; font-weight: bold;">Signup</a>

        <% } else { %>
        <a href="#" class="nav-link">Hello, <%= currentUser.username %></a>

        <!-- Cart Summary in Dropdown -->
        <div class="nav-item dropdown mx-2">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="cartDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <i class="fa-solid fa-cart-shopping"></i>
            <sup>
              <span class="badge bg-danger"><%= currentUser.cart.length %></span>
            </sup>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="cartDropdown">
            <% if (currentUser.cart.length > 0) { %>
              <% currentUser.cart.forEach((item, index) => { %>
                <li class="dropdown-item d-flex justify-content-between align-items-center">
                  <span><%= item.name %></span>
                </li>
              <% }) %>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <a href="/user/cart" class="dropdown-item text-center">View Full Cart</a>
              </li>
            <% } else { %>
              <li class="dropdown-item text-center">Your cart is empty!</li>
            <% } %>
          </ul>
        </div>

        <a href="/logout" class="nav-link mx-2">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
